<Window x:Class="WpfAppNetTest.Views.Drawings.PathClipDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppNetTest.Views.Drawings"
        mc:Ignorable="d" AllowsTransparency="True" WindowStyle="None"
        Title="PathClipDemo" Height="450" Width="800">
    <Grid>
        <Path Visibility="Visible" Stroke="Black" x:Name="clipPath" 
              Data="M 55,100 A 50,50 0 1 1 100,60 A 110,95 0 0 1 200,60 A 50,50 0 1 1 250,100 A 110,95,0 1 1 55,100 Z"/>
        <Button x:Name="btnClip" Content="Clip" Click="btnClip_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="80"/>
    </Grid>
</Window>
