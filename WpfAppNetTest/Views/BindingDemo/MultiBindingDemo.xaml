<Window x:Class="WpfAppNetTest.Views.MultiBindingDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppNetTest.Views"
        mc:Ignorable="d"
        Title="MultiBindingDemo" Height="250" Width="350">
    <StackPanel Background="LightBlue">
        <TextBox x:Name="txt1" Height="23" Margin="5"/>
        <TextBox x:Name="txt2" Height="23" Margin="5"/>
        <TextBox x:Name="txt3" Height="23" Margin="5"/>
        <TextBox x:Name="txt4" Height="23" Margin="5"/>
        <Button Width="80" Name="btnLogin" Content="Login" Margin="5" Click="btnLogin_Click"/>
    </StackPanel>
</Window>
